<Window
    x:Class="WC.WarningChartWPF.WarChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WC.WarningChartWPF"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="myWindow"
    Title="WarChartView"
    MinWidth="450"
    MinHeight="300"
    d:DesignHeight="400"
    d:DesignWidth="650"
    AllowsTransparency="True"
    Foreground="#303030"
    MouseDown="Window_MouseDown"
    ResizeMode="CanResizeWithGrip"
    SizeToContent="WidthAndHeight"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White" />
    </Window.Background>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Archilizer_Warchart;component/WarningChartWPF/MyResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:IntToColorConverter x:Key="IntToColorConvertor" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <!--  Pie chart column  -->
            <ColumnDefinition
                x:Name="chartColumn"
                Width="*"
                MinWidth="200" />
            <!--  Splitter column  -->
            <ColumnDefinition x:Name="splitterColumn" Width="5" />
            <!--  Legend column  -->
            <ColumnDefinition
                x:Name="legendColumn"
                Width="Auto"
                MinWidth="175"
                MaxWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  The Pie Chart  -->
        <lvc:PieChart
            x:Name="pieChart"
            Grid.Row="1"
            Width="Auto"
            Height="Auto"
            Series="{Binding Series}"
            TextBlock.TextAlignment="Center">
            <lvc:PieChart.Tooltip>
                <local:CustomTooltip />
            </lvc:PieChart.Tooltip>
        </lvc:PieChart>
        <Label
            x:Name="lblNoWarnings"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="22"
            Foreground="#33303030"
            Visibility="Collapsed">
            <TextBlock TextAlignment="Center"> Congratulations!<LineBreak /> This document contains
                no Warnings.</TextBlock>
        </Label>

        <!--  GridSplitter  -->
        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="#f5f5f5"
            ResizeBehavior="PreviousAndNext"
            ShowsPreview="True" />

        <!--  The Legend  -->
        <local:CustomLegend
            x:Name="legend"
            Grid.Row="1"
            Grid.Column="2"
            Height="Auto"
            Margin="10"
            VerticalAlignment="Stretch" />

        <!--  Number of Warnings Label  -->
        <DockPanel MinWidth="50" HorizontalAlignment="Right">
            <Border
                Margin="5"
                Padding="5"
                Background="{Binding Path=WarningNumber, Converter={StaticResource IntToColorConvertor}}"
                BorderThickness="0"
                CornerRadius="4"
                DockPanel.Dock="Right"
                ToolTip="Total number of Warnings">
                <TextBlock
                    HorizontalAlignment="Right"
                    Foreground="#303030"
                    Text="{Binding WarningNumber}" />
            </Border>
        </DockPanel>

        <!--  Window Control Toolbar  -->
        <DockPanel Grid.Column="2" Margin="0,0,10,0">
            <!--  Close Button  -->
            <Button
                Width="30"
                Height="30"
                Margin="2"
                Background="#03FFFFFF"
                BorderThickness="0"
                Click="CloseButton_Click"
                DockPanel.Dock="Right"
                ToolTip="Close">
                <Viewbox
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="Uniform">
                    <Path
                        Data="M 7.21875 5.78125 L 5.78125 7.21875 L 14.5625 16 L 5.78125 24.78125 L 7.21875 26.21875 L 16 17.4375 L 24.78125 26.21875 L 26.21875 24.78125 L 17.4375 16 L 26.21875 7.21875 L 24.78125 5.78125 L 16 14.5625 Z"
                        Fill="#303030" />
                </Viewbox>
            </Button>
            <!--  Collapse Button  -->
            <ToggleButton
                Name="btnToggle"
                Width="30"
                Height="30"
                Margin="2"
                Background="#03FFFFFF"
                BorderThickness="0"
                Click="CollapseButton_Click"
                DockPanel.Dock="Right"
                IsChecked="{Binding IsCheckedState, Mode=OneWay}"
                IsThreeState="True"
                ToolTip="Toggle Display">
                <Viewbox
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="Uniform">
                    <Path
                        Data="M 16 4 C 9.382813 4 4 9.382813 4 16 L 6 16 C 6 10.484375 10.484375 6 16 6 C 19.695313 6 22.925781 8.011719 24.65625 11 L 21 11 L 21 13 L 28 13 L 28 6 L 26 6 L 26 9.40625 C 23.855469 6.152344 20.179688 4 16 4 Z M 26 16 C 26 21.515625 21.515625 26 16 26 C 12.304688 26 9.074219 23.988281 7.34375 21 L 11 21 L 11 19 L 4 19 L 4 26 L 6 26 L 6 22.59375 C 8.144531 25.847656 11.820313 28 16 28 C 22.617188 28 28 22.617188 28 16 Z"
                        Fill="#303030" />
                </Viewbox>
            </ToggleButton>
            <!--  Snapshot Button  -->
            <Button
                Width="30"
                Height="30"
                Margin="2"
                Background="#03FFFFFF"
                BorderThickness="0"
                Click="SnapshotButton_Click"
                DockPanel.Dock="Right"
                ToolTip="Save Snapshot">
                <Viewbox
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="Uniform">
                    <Path
                        Data="M 12 2 C 11.172 2 10.5 2.672 10.5 3.5 L 10.5 4 L 7 4 C 5.355 4 4 5.355 4 7 L 4 18 C 4 19.645 5.355 21 7 21 L 17 21 C 18.645 21 20 19.645 20 18 L 20 7 C 20 5.355 18.645 4 17 4 L 13.5 4 L 13.5 3.5 C 13.5 2.672 12.828 2 12 2 z M 12 7 C 14.761 7 17 9.239 17 12 C 17 14.761 14.761 17 12 17 C 9.239 17 7 14.761 7 12 C 7 9.239 9.239 7 12 7 z M 12 9 C 10.343 9 9 10.343 9 12 C 9 13.657 10.343 15 12 15 C 13.657 15 15 13.657 15 12 C 15 10.343 13.657 9 12 9 z"
                        Fill="#303030" />
                </Viewbox>
            </Button>
            <!--  Settings Button  -->
            <Button
                Width="30"
                Height="30"
                Margin="2"
                Background="#03FFFFFF"
                BorderThickness="0"
                Click="SettingsButton_Click"
                DockPanel.Dock="Right"
                ToolTip="Settings">
